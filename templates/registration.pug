extends layout

block content

  form(action="/registration" method="post")
    h1 Enter the details for registration
    .form-group
      label(for="displayName") Name
      input.form-control(type="text" id="displayName" name="displayName" placeholder="Enter your name" required autofocus)
      .form-group
      label(for="email") Email
      input.form-control(type="email" id="email" name="email" placeholder="my@mail.com" required autofocus)
    .form-group
      label(for="password") Password
      input.form-control(type="password" id="password" placeholder="Enter your password" name="password" required)
    input(type="hidden" name="_csrf" value=csrf())

    button.btn.btn-lg.btn-primary.btn-block(type="submit") Submit

    
